<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
     
    <head>
        <css src="css/popup.css" />
    </head> 
    <body>
        <referenceBlock name="register-link">
            <arguments>
                <argument name="class" xsi:type="string">customer-register-link</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="authorization-link-login">
            <arguments>
                <argument name="class" xsi:type="string">customer-login-link</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="Excellence\CustomerAccount\Block\Form\Login" name="customer-popup-login" template="Excellence_CustomerAccount::login.phtml" />
            <block class="Excellence\CustomerAccount\Block\Form\Register" name="customer-popup-register" template="Excellence_CustomerAccount::register.phtml" />
        </referenceContainer>
    </body>
</page>
